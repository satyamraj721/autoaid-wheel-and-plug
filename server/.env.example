# AUTOAID 360 Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# ====================================
# DATABASE CONFIGURATION
# ====================================

# MongoDB Connection String
# Get this from MongoDB Atlas: https://cloud.mongodb.com
# Format: mongodb+srv://username:password@cluster.mongodb.net/autoaid360
MONGO_URI=mongodb://localhost:27017/autoaid360

# ====================================
# JWT CONFIGURATION
# ====================================

# JWT Secret Key (Generate a strong random string)
# You can generate one using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random-64-chars-minimum

# JWT Expiration Time
JWT_EXPIRES_IN=7d

# ====================================
# SERVER CONFIGURATION
# ====================================

# Server Port
PORT=5000

# Environment (development, production, test)
NODE_ENV=development

# CORS Origins (for production, specify allowed origins)
CORS_ORIGIN=http://localhost:5173

# ====================================
# COMPANY INFORMATION
# ====================================

# Contact Information
COMPANY_PHONE=7217842834
WHATSAPP_PHONE=+917217842834

# ====================================
# SECURITY NOTES
# ====================================
# - Never commit .env files to version control
# - Use strong, unique passwords and secrets
# - Rotate secrets regularly in production
# - Use environment-specific values for different deployments